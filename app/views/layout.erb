  </head>
  
  <body style="display:flex; min-height: 100vh; flex-direction: column;">
    <nav class="teal accent-4">
      <div class="nav-wrapper container">
        <a href="/" class="brand-logo"><i class="material-icons right">fitness_center</i>PR Journal</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <% if !logged_in? %>
            <li><a href="/login"><i class="material-icons left">account_circle</i>Login</a></li>
            <li><a href="/signup"><i class="material-icons left">person_add</i>Create Account</a></li>
          <% else %>
            <li><a href="/workouts"><i class="material-icons left">view_list</i>My Journal</a></li>
            <li><a href="/workouts/new"><i class="material-icons left">library_add</i>New PR</a></li>
            <li><a href="/logout"><i class="material-icons left">exit_to_app</i>Logout</a></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <br>
    <div class="container errors">
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <p class="red-text" style="border:red;"><%= error %></p>
        <% end %>
      <% end %>
    </div>
        
    <div class="container" style="flex: 1 0 auto;">
      <%= yield %>
    </div>
            
