<h4 class="teal-text text-accent-4">Create Account</h4>

<form action="/signup" method="post">
  <div class="row">
    <div class=" col s5 input-field">
      <input type="text" name="user[first_name]" id="firstname">
      <label for="firstname">First Name</label>
    </div>
    <div class="col s5 input-field">
      <input type="text" name="user[last_name]" id="lastname">
      <label for="lastname">Last Name</label>
    </div>
    <div class="col s10 input-field">
      <input type="text" name="user[email]" id="email">
      <label for="email">Email Address</label>
    </div>
    <div class="col s10 input-field">
      <input type="password" name="user[password]" id="password">
      <label for="password">Password</label>
    </div>
  </div>

  <input type="submit" value="Signup" class="btn teal accent-4">

</form>
